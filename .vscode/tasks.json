// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Iniciar Backend (Flask)",
            "type": "shell",
            "command": "poetry run flask run",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
            // Bloco "runOptions" removido daqui
        },
        {
            "label": "Iniciar Frontend (TypeScript)",
            "type": "shell",
            "command": "npm run watch",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": { "runOn": "folderOpen" } // Este permanece
        }
    ]
}